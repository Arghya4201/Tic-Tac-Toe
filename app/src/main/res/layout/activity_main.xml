<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heading"
        android:text="TIC TAC TOE"
        android:textStyle="italic"
        android:textSize="40dp"
        android:layout_centerHorizontal="true">
    </TextView>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_marginRight="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/heading"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/but1"
                android:onClick="but1"
                android:text=""
                android:textSize="50dp">
            </Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/but2"
                android:onClick="but2"
                android:text=""
                android:layout_marginTop="-11dp"
                android:textSize="50dp">
            </Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/but3"
                android:onClick="but3"
                android:layout_marginTop="-11dp"
                android:text=""
                android:textSize="50dp">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/but4"
                android:onClick="but4"
                android:text=""
                android:textSize="50dp">
            </Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/but5"
                android:onClick="but5"
                android:text=""
                android:layout_marginTop="-11dp"
                android:textSize="50dp">
            </Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/but6"
                android:onClick="but6"
                android:layout_marginTop="-11dp"
                android:text=""
                android:textSize="50dp">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/but7"
                android:onClick="but7"
                android:text=""
                android:textSize="50dp">
            </Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/but8"
                android:onClick="but8"
                android:text=""
                android:layout_marginTop="-11dp"
                android:textSize="50dp">
            </Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/but9"
                android:onClick="but9"
                android:layout_marginTop="-11dp"
                android:text=""
                android:textSize="50dp">
            </Button>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textStyle="italic"
        android:layout_marginTop="30dp"
        android:id="@+id/cong">
    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetbutton"
        android:layout_below="@id/cong"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="RESET"
        android:onClick="resetbutton">
    </Button>

</RelativeLayout>